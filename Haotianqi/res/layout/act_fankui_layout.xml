<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:background="@color/com_bg_blue_color"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/titilbar_left"
            android:layout_width="33sp"
            android:layout_height="44sp"
            android:background="@drawable/back"
            android:paddingRight="20sp" />

        <TextView
            android:id="@+id/titilbar_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="反馈"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/titilbar_right"
            android:layout_width="36sp"
            android:layout_height="50sp"
            android:background="@drawable/search2"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners_bg2"
        android:orientation="vertical"
        android:paddingTop="10sp" >

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:lineSpacingMultiplier="1.1"
            android:background="@null"
            android:hint="我们感谢你的建议~"
            android:textColor="@color/com_bg_dark_color"
            android:textColorHint="#bbb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="20sp" >

        <TextView
            android:id="@+id/btn1"
            android:layout_width="0sp"
            android:layout_height="46sp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:padding="14sp"
            android:text="取消"
            android:textColor="@color/com_bg_blue_color" />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="0sp"
            android:layout_height="46sp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:padding="14sp"
            android:text="提交"
            android:textColor="@color/com_bg_blue_color" />
    </LinearLayout>

</LinearLayout>