<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >

    <LinearLayout
        android:id="@+id/head1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/com_bg_blue_color"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/changInfo"
                android:layout_width="wrap_content"
                android:layout_height="36sp"
                android:drawableRight="@drawable/edit"
                android:gravity="center_vertical"
                android:text="修改信息"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lay3"
        android:layout_below="@+id/head1"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/pifu"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:paddingLeft="15sp" >

                <TextView
                    android:id="@+id/pifu_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/pifu"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="皮肤 给天皮肤吧..."
                    android:textColor="@color/com_bg_dark_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/pifu"
                android:background="#ccc" />

            <LinearLayout
                android:id="@+id/tongzhi"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="15sp" >

                <TextView
                    android:id="@+id/tongzhi_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/message_press"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="通知 给天皮肤吧..."
                    android:textColor="@color/com_bg_dark_color" />

                <ImageView
                    android:id="@+id/msg_unread0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unread_count_bg" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <LinearLayout
                android:id="@+id/app"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="15sp" >

                <TextView
                    android:id="@+id/app_text"
                    android:layout_width="0sp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/app"
                    android:drawablePadding="6sp"
                    android:gravity="center_vertical"
                    android:text="应用 给天皮肤吧..."
                    android:textColor="@color/com_bg_dark_color" />

                <ImageView
                    android:id="@+id/msg_unread1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/unread_count_bg" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/gv_tianqi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="天气预报"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gv_jiankang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="健康资讯"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gv_jingdian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="景点查询"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/gv_yingshi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="影视查询"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gv_xingzuo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="星座运势"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gv_kuaile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="每日一乐"
                        android:textColor="@color/com_bg_dark_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15sp"
        android:paddingRight="15sp" >

        <TextView
            android:id="@+id/set"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/setting"
            android:drawablePadding="5sp"
            android:gravity="left|center_vertical"
            android:text="设置"
            android:textColor="@color/com_bg_dark_color"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="24sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="@color/com_bg_dark_color" />

        <TextView
            android:id="@+id/exit"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="10sp"
            android:text="退出"
            android:textColor="@color/com_bg_dark_color"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>